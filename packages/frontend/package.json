{
  "name": "@cl8y-bridge/frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "SKIP_INTEGRATION=true vitest run",
    "test:integration": "vitest run src/test/integration.test.ts",
    "test:integration:chains": "vitest run --config vitest.config.integration.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:setup": "tsx src/test/e2e-infra/setup.ts",
    "test:e2e:teardown": "tsx src/test/e2e-infra/teardown.ts",
    "test:bridge": "vitest run --config vitest.config.integration.ts src/test/transfers/",
    "test:e2e:verify": "playwright test --project=verification --workers=1",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@fontsource/chakra-petch": "^5.2.7",
    "@fontsource/ibm-plex-sans": "^5.2.8",
    "@goblinhunt/cosmes": "^0.0.71-ghunt.21",
    "@tanstack/react-query": "^5.17.0",
    "react": "^18.2.0",
    "react-blockies": "^1.4.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.3",
    "viem": "^2.0.0",
    "wagmi": "^2.0.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^20.4.0",
    "jsdom": "^28.0.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^4.0.18"
  }
}
